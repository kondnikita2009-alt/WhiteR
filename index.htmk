<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MONEY PRINTER /// GITHUB</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=Orbitron:wght@900&display=swap" rel="stylesheet">
    
    <style>
        body {
            background-color: #050505;
            color: #10b981; /* Emerald 500 */
            font-family: 'Share Tech Mono', monospace;
            overflow: hidden;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* --- BACKGROUND MONEY RAIN --- */
        .money-rain-container {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            pointer-events: none;
            z-index: 0;
            overflow: hidden;
        }
        .falling-bill {
            position: absolute;
            top: -50px;
            font-size: 24px;
            animation: fall linear forwards;
            opacity: 0.3;
        }
        @keyframes fall {
            to { transform: translateY(110vh) rotate(360deg); }
        }

        /* --- TEXT STYLES --- */
        .neon-text {
            text-shadow: 0 0 10px rgba(16, 185, 129, 0.5), 
                         0 0 20px rgba(16, 185, 129, 0.3), 
                         0 0 40px rgba(16, 185, 129, 0.1);
        }
        
        .balance-text {
            font-family: 'Orbitron', sans-serif;
            background: linear-gradient(to bottom, #34d399, #059669);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            filter: drop-shadow(0 0 15px rgba(16, 185, 129, 0.4));
        }

        .pulse-anim { animation: pulse-glow 1s infinite alternate; }
        @keyframes pulse-glow {
            from { transform: scale(1); filter: drop-shadow(0 0 10px rgba(16, 185, 129, 0.4)); }
            to { transform: scale(1.02); filter: drop-shadow(0 0 25px rgba(16, 185, 129, 0.8)); }
        }

        .scanline {
            position: fixed; top: 0; left: 0; width: 100%; height: 5px;
            background: rgba(16, 185, 129, 0.3);
            opacity: 0.4;
            animation: scan 6s linear infinite;
            z-index: 10;
            pointer-events: none;
        }
        @keyframes scan { 0% {top: -5%;} 100% {top: 105%;} }

    </style>
</head>
<body class="relative">

    <div class="scanline"></div>
    <div class="money-rain-container" id="rain"></div>

    <div class="z-10 text-center w-full">
        
        <div class="mb-4">
            <p class="text-slate-500 text-sm tracking-[0.5em] uppercase mb-2">Time Hustling</p>
            <div id="timer" class="text-4xl md:text-5xl opacity-80 font-bold tracking-widest text-emerald-400/70">
                00:00:00
            </div>
        </div>

        <div class="my-8">
            <p class="text-emerald-500/50 text-lg tracking-widest uppercase mb-4 animate-pulse">Total Balance</p>
            <div class="flex justify-center items-center gap-4">
                <span class="text-6xl md:text-8xl text-emerald-500">$</span>
                <span id="balance" class="text-8xl md:text-[10rem] font-black balance-text pulse-anim leading-none">
                    0
                </span>
            </div>
        </div>

        <div class="mt-12 bg-emerald-900/20 border border-emerald-500/30 px-6 py-2 rounded-full inline-block backdrop-blur-sm">
            <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-emerald-400 opacity-75 mr-2"></span>
            <span class="text-emerald-400 text-sm font-bold tracking-widest">MINING IN PROGRESS...</span>
        </div>

    </div>

    <script>
        // --- LOGIC ---
        let seconds = 0;
        let money = 0;
        const moneyPerSecond = 1; // –°–∫–æ–ª—å–∫–æ –¥–æ–ª–ª–∞—Ä–æ–≤ –≤ —Å–µ–∫—É–Ω–¥—É

        const timerEl = document.getElementById('timer');
        const balanceEl = document.getElementById('balance');

        // –û—Å–Ω–æ–≤–Ω–æ–π —Ç–∞–π–º–µ—Ä
        setInterval(() => {
            // –í—Ä–µ–º—è
            seconds++;
            const h = Math.floor(seconds / 3600).toString().padStart(2, '0');
            const m = Math.floor((seconds % 3600) / 60).toString().padStart(2, '0');
            const s = (seconds % 60).toString().padStart(2, '0');
            timerEl.innerText = `${h}:${m}:${s}`;

            // –î–µ–Ω—å–≥–∏
            money += moneyPerSecond;
            // –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —Å –∑–∞–ø—è—Ç—ã–º–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä: 1,000,000)
            balanceEl.innerText = money.toLocaleString('en-US');
            
            // –ó–≤—É–∫–æ–≤–æ–π —ç—Ñ—Ñ–µ–∫—Ç (—Ç–∏–∫) - –º–æ–∂–Ω–æ —Ä–∞—Å–∫–æ–º–º–µ–Ω—Ç–∏—Ä–æ–≤–∞—Ç—å –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
            // new Audio('click.mp3').play().catch(e=>{}); 

        }, 1000);

        // --- MONEY RAIN ANIMATION SCRIPT ---
        const rainContainer = document.getElementById('rain');
        const emojis = ['üíµ', 'üí∏', 'üí∞', 'ü§ë', 'üíé'];

        function createBill() {
            const bill = document.createElement('div');
            bill.innerText = emojis[Math.floor(Math.random() * emojis.length)];
            bill.classList.add('falling-bill');
            
            // –†–∞–Ω–¥–æ–º–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è –∏ —Å–∫–æ—Ä–æ—Å—Ç—å
            bill.style.left = Math.random() * 100 + 'vw';
            bill.style.animationDuration = Math.random() * 3 + 2 + 's'; // –æ—Ç 2 –¥–æ 5 —Å–µ–∫—É–Ω–¥
            bill.style.fontSize = Math.random() * 20 + 20 + 'px';
            
            rainContainer.appendChild(bill);

            // –£–¥–∞–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏ —á—Ç–æ–±—ã –Ω–µ –≥—Ä—É–∑–∏—Ç—å –ø–∞–º—è—Ç—å
            setTimeout(() => {
                bill.remove();
            }, 5000);
        }

        // –°–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–µ –∫—É–ø—é—Ä—ã –∫–∞–∂–¥—ã–µ 300–º—Å
        setInterval(createBill, 300);

    </script>
</body>
</html>
